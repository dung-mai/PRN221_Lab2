<div class="paging-product-list" id="paging-div">
    <form method="POST" id="main-form" asp-page="/Product/Shop" asp-page-handler="FilterProduct">
        <div id="pagger" class="pagger"></div>
        <div class="nrpp">
            <select name="pagesize" onchange="this.form.submit()">
                @foreach (var i in Model.AvailPageSize)
                {
                    @if (Model.Page.Pagesize != null && Model.Page.Pagesize == i)
                    {
                        <option value="@i" selected>@i</option>
                    } else
                    {
                        <option value="@i">@i</option>
                    }
                }
            </select>
            <span>
                Hiển thị @((Model.Page.Pageindex - 1) * Model.Page.Pagesize + 1) –
                @((Model.Page.Totalrecords > Model.Page.Pageindex * Model.Page.Pagesize) ? Model.Page.Pageindex * Model.Page.Pagesize : Model.Page.Totalrecords)
                trong @(Model.Page.Totalrecords) kết quả
            </span>
            <input type="hidden" name="cid" value="@(ViewBag.SelectedCategory)">
        </div>
    </form>
</div>
<script src="~/js/pagger.js" type="text/javascript"></script>
<script type="text/javascript">
    pagger('pagger', @(Model.Page.Pageindex), @(Model.Page.Totalpage), 2, -1);
</script>
