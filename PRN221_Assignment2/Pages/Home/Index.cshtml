@page "/home"
@model PRN221_Assignment2.Pages.Home.IndexModel

@{
    ViewData["Title"] = "Home Page";
}
<!-- Top banner -->
<section class="top-banner">
    <img src="~/img/banner_super.jpg">
    <div class="textbox">
        <h2>GIAO TẬN TAY NGƯỜI DÙNG NHANH</h2>
        <h1>
            <b><span>THỰC PHẨM ORGANIC</span></b>
        </h1>
        <h3>Chúng tôi cung cấp các sản phẩm hữu cơ chất lượng cao</h3>
        <button class="">
            <a href="">
                <span>MUA NGAY</span>
                <i class="fas fa-angle-right"></i>
            </a>
        </button>
    </div>
</section>

<!-- Product category -->
<section class="section category">
    <h1 class="category_intro">Mua sản phẩm được lựa chọn từ vườn</h1>
    <div class="section_list category_list">
        @foreach (CategoryDTO category in Model.Categories)
        {
            <div class="category-container">
                <img src="data:image/png;base64,@(Convert.ToBase64String(category.Picture))" alt="Image" class="image" />
                <div class="overlay">
                    <img src="data:image/png;base64,@(Convert.ToBase64String(category.Picture))" alt="Image" class="image" />
                </div>
                <h3><a href="/shop?cid=@category.CategoryId">@category.CategoryName</a></h3>
            </div> <!-- /category -->
        }
    </div>
</section>


